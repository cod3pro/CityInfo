<% include partials/header %>



<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>City info page</h1>
            <p>View the best places we picked from all around the World!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/cityinfo">Main Page</a>
                <a class="btn btn-primary btn-lg" href="/cityinfo/new">Add</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% info.forEach(function(info){ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= info.image %>">
                    
                    <div class="caption">
                        <h4><%= info.name %></h4>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    
    
    
    <% include partials/footer %>

</div>